{% extends 'dashboard.twig' %}

{% block topcontrols %}
    {% include "@CoreHome/_siteSelectHeader.twig" %}
    {% include "@CoreHome/_periodSelect.twig" %}
    {{ postEvent("Template.nextToCalendar") }}
    {% include "@CoreHome/_headerMessage.twig" %}
{% endblock %}

{% block content %}
<!-- Step Evolution Modal -->
<div id="stepEvolutionModal" class="step-evolution-modal" style="display: none;" data-test="step-evolution-modal">
    <div class="step-evolution-modal-content">
        <div class="step-evolution-modal-header">
            <h3 data-test="step-evolution-title">{{ 'FunnelInsights_Evolution'|translate }}: <span id="stepEvolutionStepName"></span></h3>
            <button type="button" class="step-evolution-close" data-test="step-evolution-close">&times;</button>
        </div>
        <div class="step-evolution-modal-body" data-test="step-evolution-body">
            <div id="stepEvolutionLoading" style="text-align: center; padding: 40px;">
                <span class="icon-loading"></span> Loading...
            </div>
            <div id="stepEvolutionContent" style="display: none;">
                <table class="dataTable entityTable" id="stepEvolutionTable" data-test="step-evolution-table">
                    <thead>
                        <tr>
                            <th>{{ 'General_Date'|translate }}</th>
                            <th>{{ 'FunnelInsights_Visits'|translate }}</th>
                            <th>{{ 'FunnelInsights_Proceeded'|translate }}</th>
                            <th>{{ 'FunnelInsights_DropOff'|translate }}</th>
                            <th>{{ 'FunnelInsights_ConversionRate'|translate }}</th>
                        </tr>
                    </thead>
                    <tbody id="stepEvolutionTableBody"></tbody>
                </table>
                <div id="stepEvolutionChart" style="margin-top: 20px; height: 200px;" data-test="step-evolution-chart"></div>
            </div>
            <div id="stepEvolutionError" style="display: none; color: #f44336; padding: 20px; text-align: center;" data-test="step-evolution-error"></div>
        </div>
    </div>
</div>

<style>
    .step-evolution-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 10000;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .step-evolution-modal-content {
        background: white;
        border-radius: 8px;
        width: 90%;
        max-width: 800px;
        max-height: 90vh;
        overflow: auto;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
    .step-evolution-modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        border-bottom: 1px solid #e0e0e0;
    }
    .step-evolution-modal-header h3 {
        margin: 0;
        font-size: 18px;
    }
    .step-evolution-close {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        color: #666;
        padding: 0;
        line-height: 1;
    }
    .step-evolution-close:hover {
        color: #333;
    }
    .step-evolution-modal-body {
        padding: 20px;
    }
    .funnel-bar.clickable {
        cursor: pointer;
    }
    .funnel-bar.clickable:hover {
        transform: scale(1.05);
    }
</style>

<div class="card">
    <div class="card-content">
        <h2 class="card-title">{{ funnel.name }}</h2>

        {% if funnel.goal_id %}
        <div class="notification system notification-info" style="margin-bottom: 16px; padding: 12px;">
            <span class="icon-goal"></span>
            <strong>{{ 'FunnelInsights_AssociatedGoal'|translate }}:</strong> Goal #{{ funnel.goal_id }}
            <br><small style="opacity: 0.8;">{{ 'FunnelInsights_GoalFilterHelp'|translate }}</small>
        </div>
        {% endif %}

        <div class="funnel-stats" style="display: flex; gap: 24px; margin: 24px 0;" data-test="funnel-stats">
            <div class="stat-box" style="flex: 1; text-align: center; padding: 16px; background: #f5f5f5; border-radius: 8px;" data-test="funnel-stat-entries">
                <div style="font-size: 28px; font-weight: bold; color: #333;">{{ funnelReport.total_entries|default(0)|number_format }}</div>
                <div style="font-size: 12px; color: #666; text-transform: uppercase;">{{ 'FunnelInsights_TotalEntries'|translate }}</div>
            </div>
            <div class="stat-box" style="flex: 1; text-align: center; padding: 16px; background: #f5f5f5; border-radius: 8px;" data-test="funnel-stat-conversions">
                <div style="font-size: 28px; font-weight: bold; color: #4caf50;">{{ funnelReport.total_conversions|default(0)|number_format }}</div>
                <div style="font-size: 12px; color: #666; text-transform: uppercase;">{{ 'FunnelInsights_TotalConversions'|translate }}</div>
            </div>
            <div class="stat-box" style="flex: 1; text-align: center; padding: 16px; background: #f5f5f5; border-radius: 8px;" data-test="funnel-stat-rate">
                <div style="font-size: 28px; font-weight: bold; color: #2196f3;">{{ funnelReport.conversion_rate|default(0)|number_format(1) }}%</div>
                <div style="font-size: 12px; color: #666; text-transform: uppercase;">{{ 'FunnelInsights_ConversionRate'|translate }}</div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-content">
        <h3 class="card-title">{{ 'FunnelInsights_Steps'|translate }}</h3>

        {% if funnelReport.steps is defined and funnelReport.steps|length > 0 %}
            <style>
                .funnel-container {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    padding: 20px 0;
                    max-width: 800px;
                    margin: 0 auto;
                }
                .funnel-step-wrapper {
                    display: flex;
                    align-items: center;
                    width: 100%;
                    gap: 24px;
                }
                .funnel-step-left {
                    width: 200px;
                    text-align: right;
                    flex-shrink: 0;
                }
                .funnel-step-center {
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                }
                .funnel-step-right {
                    width: 200px;
                    text-align: left;
                    flex-shrink: 0;
                }
                .funnel-bar {
                    height: 50px;
                    background: linear-gradient(180deg, #2196f3 0%, #1976d2 100%);
                    border-radius: 4px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    color: white;
                    font-weight: bold;
                    font-size: 18px;
                    transition: all 0.3s ease;
                    box-shadow: 0 2px 8px rgba(33, 150, 243, 0.3);
                }
                .funnel-bar:hover {
                    transform: scale(1.02);
                    box-shadow: 0 4px 12px rgba(33, 150, 243, 0.4);
                }
                .funnel-connector {
                    width: 0;
                    height: 0;
                    border-style: solid;
                    margin: -1px 0;
                }
                .step-label {
                    font-weight: 600;
                    color: #333;
                    font-size: 14px;
                    margin-bottom: 4px;
                }
                .step-number-badge {
                    display: inline-block;
                    width: 24px;
                    height: 24px;
                    background: #2196f3;
                    color: white;
                    border-radius: 50%;
                    text-align: center;
                    line-height: 24px;
                    font-size: 12px;
                    font-weight: bold;
                    margin-right: 8px;
                }
                .step-visits {
                    font-size: 13px;
                    color: #666;
                }
                .step-drop-off {
                    font-size: 12px;
                    color: #f44336;
                    display: flex;
                    align-items: center;
                    gap: 4px;
                }
                .step-rate {
                    font-size: 12px;
                    font-weight: 600;
                    display: flex;
                    align-items: center;
                    gap: 4px;
                }
                .rate-good { color: #4caf50; }
                .rate-warning { color: #ff9800; }
                .rate-bad { color: #f44336; }
                .arrow-down {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    padding: 8px 0;
                }
                .arrow-down .rate-text {
                    font-size: 13px;
                    font-weight: 600;
                    margin-bottom: 4px;
                }
                .arrow-down svg {
                    width: 24px;
                    height: 24px;
                }
            </style>

            <div class="funnel-container" data-test="funnel-visualization">
                {% for step in funnelReport.steps %}
                    {% set barWidth = step.fill_rate|default(100) %}
                    {% set nextBarWidth = loop.last ? barWidth : (funnelReport.steps[loop.index0 + 1].fill_rate|default(50)) %}

                    <div class="funnel-step-wrapper" data-test="funnel-step-{{ loop.index }}">
                        <div class="funnel-step-left">
                            <div class="step-label">
                                <span class="step-number-badge">{{ loop.index }}</span>
                                {{ step.name|default(step.step_name|default('Step ' ~ loop.index)) }}
                            </div>
                            <div class="step-visits">
                                {{ step.nb_visits|default(0)|number_format }} {{ 'FunnelInsights_Visits'|translate }}
                            </div>
                        </div>

                        <div class="funnel-step-center">
                            <div class="funnel-bar clickable"
                                 style="width: {{ barWidth }}%;"
                                 data-step-index="{{ loop.index0 }}"
                                 data-step-name="{{ step.name|default(step.step_name|default('Step ' ~ loop.index)) }}"
                                 data-test="funnel-bar-{{ loop.index }}"
                                 title="{{ 'FunnelInsights_Evolution'|translate }}">
                                {{ step.nb_visits|default(0)|number_format }}
                            </div>
                        </div>

                        <div class="funnel-step-right">
                            {% if step.nb_drop_off is defined and step.nb_drop_off > 0 %}
                                <div class="step-drop-off">
                                    <svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor">
                                        <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
                                    </svg>
                                    -{{ step.nb_drop_off|number_format }} {{ 'FunnelInsights_DropOff'|translate }}
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    {% if not loop.last %}
                        <div class="arrow-down">
                            {% if step.rate is defined %}
                                <span class="rate-text {% if step.rate >= 70 %}rate-good{% elseif step.rate >= 40 %}rate-warning{% else %}rate-bad{% endif %}">
                                    {{ step.rate|number_format(1) }}%
                                </span>
                            {% endif %}
                            <svg viewBox="0 0 24 24" fill="#999">
                                <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
                            </svg>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% else %}
            <div class="notification system notification-info">
                {{ 'FunnelInsights_NoDataForPeriod'|translate }}
            </div>
        {% endif %}
    </div>
</div>

<div class="card">
    <div class="card-content" style="display: flex; gap: 12px; flex-wrap: wrap;">
        <a href="{{ linkTo({'module': 'FunnelInsights', 'action': 'index'}) }}" class="btn btn-flat" data-test="funnel-back-button">
            <span class="icon-arrow-left"></span> {{ 'FunnelInsights_BackToFunnels'|translate }}
        </a>
        <a href="{{ linkTo({'module': 'FunnelInsights', 'action': 'visitorLog', 'idFunnel': funnel.idfunnel}) }}" class="btn" data-test="funnel-visitor-log-button">
            <span class="icon-visitor"></span> {{ 'FunnelInsights_VisitorLog'|translate }}
        </a>
        <a href="{{ linkTo({'module': 'FunnelInsights', 'action': 'edit', 'idFunnel': funnel.idfunnel}) }}" class="btn" data-test="funnel-view-edit-button">
            <span class="icon-edit"></span> {{ 'FunnelInsights_EditFunnel'|translate }}
        </a>
    </div>
</div>

<script>
(function() {
    var idSite = {{ idSite }};
    var idFunnel = {{ funnel.idfunnel }};
    var period = '{{ period }}';
    var date = '{{ date }}';

    var modal = document.getElementById('stepEvolutionModal');
    var closeBtn = modal.querySelector('.step-evolution-close');
    var loadingEl = document.getElementById('stepEvolutionLoading');
    var contentEl = document.getElementById('stepEvolutionContent');
    var errorEl = document.getElementById('stepEvolutionError');
    var tableBody = document.getElementById('stepEvolutionTableBody');
    var stepNameEl = document.getElementById('stepEvolutionStepName');
    var chartEl = document.getElementById('stepEvolutionChart');

    function showModal(stepIndex, stepName) {
        stepNameEl.textContent = stepName;
        loadingEl.style.display = 'block';
        contentEl.style.display = 'none';
        errorEl.style.display = 'none';
        modal.style.display = 'flex';

        var url = 'index.php?module=FunnelInsights&action=getStepEvolution' +
            '&idSite=' + idSite +
            '&idFunnel=' + idFunnel +
            '&stepIndex=' + stepIndex +
            '&period=day&date=last30';

        fetch(url, { credentials: 'same-origin' })
            .then(function(response) {
                return response.json();
            })
            .then(function(data) {
                loadingEl.style.display = 'none';

                if (data.error) {
                    errorEl.textContent = data.error;
                    errorEl.style.display = 'block';
                    return;
                }

                if (!data || data.length === 0) {
                    errorEl.textContent = '{{ 'FunnelInsights_NoDataForPeriod'|translate }}';
                    errorEl.style.display = 'block';
                    return;
                }

                // Populate table
                tableBody.innerHTML = '';
                data.forEach(function(row) {
                    var tr = document.createElement('tr');
                    tr.innerHTML =
                        '<td>' + row.date + '</td>' +
                        '<td>' + (row.nb_visits || 0).toLocaleString() + '</td>' +
                        '<td>' + (row.nb_proceeded || 0).toLocaleString() + '</td>' +
                        '<td>' + (row.nb_drop_off || 0).toLocaleString() + '</td>' +
                        '<td>' + (row.rate || 0).toFixed(1) + '%</td>';
                    tableBody.appendChild(tr);
                });

                // Draw simple SVG chart
                drawChart(data);
                contentEl.style.display = 'block';
            })
            .catch(function(err) {
                loadingEl.style.display = 'none';
                errorEl.textContent = 'Error loading data: ' + err.message;
                errorEl.style.display = 'block';
            });
    }

    function drawChart(data) {
        if (data.length < 2) {
            chartEl.innerHTML = '';
            return;
        }

        var values = data.map(function(d) { return d.nb_visits || 0; });
        var maxVal = Math.max.apply(null, values);
        var minVal = Math.min.apply(null, values);
        var range = maxVal - minVal || 1;

        var width = chartEl.offsetWidth || 700;
        var height = 180;
        var padding = 20;

        var points = data.map(function(d, i) {
            var x = padding + (i / (data.length - 1)) * (width - 2 * padding);
            var y = height - padding - ((d.nb_visits || 0) - minVal) / range * (height - 2 * padding);
            return x + ',' + y;
        });

        var areaPoints = padding + ',' + (height - padding) + ' ' + points.join(' ') + ' ' + (width - padding) + ',' + (height - padding);

        chartEl.innerHTML =
            '<svg width="100%" height="' + height + '" viewBox="0 0 ' + width + ' ' + height + '" preserveAspectRatio="none">' +
                '<polyline fill="rgba(33, 150, 243, 0.1)" stroke="none" points="' + areaPoints + '"/>' +
                '<polyline fill="none" stroke="#2196f3" stroke-width="2" points="' + points.join(' ') + '"/>' +
            '</svg>' +
            '<div style="display: flex; justify-content: space-between; font-size: 11px; color: #999;">' +
                '<span>' + data[0].date + '</span>' +
                '<span>' + data[data.length - 1].date + '</span>' +
            '</div>';
    }

    function hideModal() {
        modal.style.display = 'none';
    }

    // Attach click handlers to funnel bars
    document.querySelectorAll('.funnel-bar.clickable').forEach(function(bar) {
        bar.addEventListener('click', function() {
            var stepIndex = parseInt(this.getAttribute('data-step-index'), 10);
            var stepName = this.getAttribute('data-step-name');
            showModal(stepIndex, stepName);
        });
    });

    // Close modal on X click
    closeBtn.addEventListener('click', hideModal);

    // Close modal on overlay click
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            hideModal();
        }
    });

    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && modal.style.display === 'flex') {
            hideModal();
        }
    });
})();
</script>
{% endblock %}
