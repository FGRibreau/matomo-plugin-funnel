<div class="card">
    <div class="card-content">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
            <h2 class="card-title" style="margin: 0;">{{ 'FunnelInsights_Funnels'|translate }}</h2>
            <a href="{{ linkTo({'module': 'FunnelInsights', 'action': 'manage'}) }}" class="btn btn-flat">
                <span class="icon-settings"></span> {{ 'FunnelInsights_ManageFunnels'|translate }}
            </a>
        </div>

        {% set activeFunnels = funnels|filter(f => f.active) %}

        {% if activeFunnels|length > 0 %}
            <p class="card-description" style="margin-bottom: 16px;">
                {{ 'FunnelInsights_SelectFunnelToView'|translate }}
            </p>
            <div class="funnelList">
                {% for funnel in activeFunnels %}
                <div class="card" style="margin-bottom: 12px; border: 1px solid #e0e0e0;">
                    <div class="card-content" style="display: flex; justify-content: space-between; align-items: center; padding: 16px;">
                        <div>
                            <h3 class="card-title" style="font-size: 16px; margin: 0 0 4px 0;">{{ funnel.name }}</h3>
                            <p class="card-description" style="margin: 0; font-size: 13px; color: #666;">
                                <span class="icon-funnel"></span> {{ funnel.steps|length }} {{ 'FunnelInsights_Steps'|translate|lower }}
                                {% if funnel.goal_id %}
                                    &nbsp;&bull;&nbsp; <span class="icon-goal"></span> {{ 'FunnelInsights_Goal'|translate }} #{{ funnel.goal_id }}
                                {% endif %}
                            </p>
                        </div>
                        <a href="{{ linkTo({'module': 'FunnelInsights', 'action': 'viewFunnel', 'idFunnel': funnel.idfunnel}) }}" class="btn">
                            {{ 'FunnelInsights_FunnelDetails'|translate }}
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="notification system notification-info" style="margin-bottom: 16px;">
                <p style="margin: 0;">{{ 'FunnelInsights_NoActiveFunnels'|translate }}</p>
            </div>
            <a href="{{ linkTo({'module': 'FunnelInsights', 'action': 'edit'}) }}" class="btn">
                <span class="icon-add"></span> {{ 'FunnelInsights_CreateFunnel'|translate }}
            </a>
        {% endif %}
    </div>
</div>
